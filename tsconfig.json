{
  "compileOnSave": false,
  "compilerOptions": {
      "target": "es6",
      "allowJs": true,
      "skipLibCheck": true,
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "dist",
      "strict": true,
      "declaration": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noUncheckedIndexedAccess": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ],
  "ts-node": {
    "compilerOptions": {
      "isolatedModules": false,
      "module": "CommonJS"
    }
  }
}